{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "downlevelIteration": true,
    "strictNullChecks": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@controller/*": ["controller/*"],
      "@entity/*": ["entity/*"],
      "@providers/*": ["providers/*"],
      "@service/*": ["service/*"],
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
